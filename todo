  <script>
    // Script para enlazar palabras clave dentro del documento a sus secciones numeradas.
    (function(){
      const map = {
        'museo': '#museo1',
        'festival': '#festival2',
        'autores': '#autores3',
        'libros': '#libros4'
      };
      // Reemplazar en todo el main el texto exacto (palabras en minúsculas) por enlaces.
      const container = document.body;
      function walk(node){
        if(node.nodeType===3){ // text node
          let txt = node.nodeValue;
          const lowered = txt.toLowerCase();
          let changed = false;
          Object.keys(map).forEach(word=>{
            const re = new RegExp('\\b'+word+'\\b','gi');
            if(re.test(txt)){
              changed = true;
              txt = txt.replace(re, `<a href="${map[word]}" class="inline-link">${word} <span style=\"font-weight:800;color:var(--accent)\">(${{'museo':1,'festival':2,'autores':3,'libros':4}[word]})</span></a>`);
            }
          });
          if(changed){
            const span = document.createElement('span');
            span.innerHTML = txt;
            node.parentNode.replaceChild(span,node);
          }
        } else if(node.nodeType===1 && node.childNodes && !['A','SCRIPT','STYLE'].includes(node.tagName)){
          for(let i=0;i<node.childNodes.length;i++) walk(node.childNodes[i]);
        }
      }
      walk(container);
      // small style for inline links
      const s = document.createElement('style');
      s.innerHTML = `.inline-link{color:var(--muted);text-decoration:none;font-weight:700} .inline-link:hover{color:var(--accent)}`;
      document.head.appendChild(s);
    })();
  </script>
